@{
    ViewBag.Title = "Courses List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<EFCoreToDo.Models.Courss>

<form asp-controller="Courses" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table table-striped table-advance table-hover">
    <h4><i class="fa fa-angle-right"></i> Courses List</h4>
    <hr>
    <thead>
        <tr>

            <th><i class="fa fa-bookmark"></i> Title </th>
            <th><i class="fa fa-bookmark"></i> Publication Date </th>
            <th><i class="fa fa-bookmark"></i> Description </th>
            <th><i class="fa fa-bookmark"></i> Action </th>



            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tbody>
            <tr>
                <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Title)</a></td>
                <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.PublicationDate)</a></td>
                <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.Description)</a></td>
                

                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_cours">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_cours">Delete</a> |
                    <a asp-action="Details" asp-route-id="@item.id_cours">Info</a> 
               </td>
            </tr>


        </tbody>
    }

</table>

