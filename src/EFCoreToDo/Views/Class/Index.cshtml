@foreach (var item in Model)
{



    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-body">
                <div class="media-main">
                    <a class="pull-left" href="#">
                        <img class="thumb-lg img-circle bx-s" src="~/img/esprit.jpg" alt="">
                    </a>
                    <div class="pull-right btn-group-sm">
                        
                    </div>
                    <div class="info">
                        <h4>@Html.DisplayFor(modelItem => item.ClasseName)</h4>
                        <hr>
                        <p class="text-muted">
                            Level : @Html.DisplayFor(modelItem => item.Level)
                            <hr>Speciality :
                            @Html.DisplayFor(modelItem => item.Speciality)
                            <hr>Stundents Number :
                            @Html.DisplayFor(modelItem => item.NbreEtudiants)

                        </p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <hr>
                <ul class="social-links list-inline p-b-10">
                    <li>
                        <a asp-action="Edit" asp-route-id="@item.ClasssId">Edit</a>



                    </li>
                    <li> <a asp-action="Delete" asp-route-id="@item.ClasssId">Delete</a> </li>
                </ul>
            </div> <!-- panel-body -->
        </div> <!-- panel -->
    </div>
}

