@{
    ViewBag.Title = "Edit a Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EFCoreToDo.Models.Module

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Module</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ModuleId" />
        <div class="form-group">
            <label asp-for="ModuleName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModuleCoeif" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ModuleCoeif" class="form-control" />
                <span asp-validation-for="ModuleCoeif" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
